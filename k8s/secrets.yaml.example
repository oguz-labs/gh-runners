---
# GitHub Token Secret
# This file is a TEMPLATE - copy to secrets.yaml and fill in your values
# NEVER commit secrets.yaml to version control!
#
# To use:
# 1. Copy this file: cp k8s/secrets.yaml.example k8s/secrets.yaml
# 2. Edit k8s/secrets.yaml and replace placeholders
# 3. Apply: kubectl apply -f k8s/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: github-token
  namespace: github-runners
type: Opaque
stringData:
  # GitHub Personal Access Token (PAT) or GitHub App credentials
  # 
  # For PAT, required scopes:
  # - Repository runners: 'repo' (Full control of private repositories)
  # - Organization runners: 'admin:org' + 'repo'
  #
  # To create a PAT:
  # 1. Go to GitHub Settings → Developer settings → Personal access tokens → Tokens (classic)
  # 2. Click "Generate new token (classic)"
  # 3. Select required scopes
  # 4. Copy the token and paste below
  
  github_token: "YOUR_GITHUB_PAT_HERE"
---
# ConfigMap for GitHub Configuration
apiVersion: v1
kind: ConfigMap
metadata:
  name: github-config
  namespace: github-runners
data:
  # Choose ONE of the following configurations:
  
  # Option 1: Repository-level runners (for a specific repository)
  # Uncomment and fill in your values:
  # github_owner: "your-github-username-or-org"
  # github_repository: "your-repo-name"
  
  # Option 2: Organization-level runners (for all repos in organization)
  # Uncomment and fill in your value:
  # github_organization: "your-org-name"
  
  # Option 3: Enterprise-level runners (for enterprise account)
  # Uncomment and fill in your value:
  # github_enterprise: "your-enterprise-name"
  
  # Default configuration (replace these)
  github_owner: "REPLACE_WITH_YOUR_GITHUB_USERNAME_OR_ORG"
  github_repository: "REPLACE_WITH_YOUR_REPO_NAME"
  
  # Runner labels (optional, space-separated)
  # These labels can be used to target specific runners in workflows
  runner_labels: "self-hosted,kubernetes,on-demand"
  
  # Runner group (optional, for organization/enterprise runners)
  # runner_group: "default"
